.clear
	clear both

.clearfix
	clearfix()



// Вертикальные помощник
.vertical-helper
	display: inline-block;
	height: 100%;
	vertical-align: middle;



// Адаптивный блок видео:
// .video-widget.video-widget_responsive.video-widget_16x9

.video-widget
	position relative
	display block
	height 0
	padding 0
	overflow hidden
	&_responsive
		iframe
		embed
		object
		video
			position absolute
			top 0
			bottom 0
			left 0
			width 100%
			height 100%
			border 0
	&_16x9
		padding-bottom 56.25%
	&_4x3
		padding-bottom 75%



.text-large
	font-size 24px
	font-weight normal
	font-family $f3


.fit
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin auto
	display block
	width 100%

.cssall .fit
	width 100%
	height 100%
	object-fit cover


