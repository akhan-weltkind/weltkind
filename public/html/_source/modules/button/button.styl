//-//////////////////////////////////////////////////////////
//- Reset button style
//-//////////////////////////////////////////////////////////
.button
	noselect()
	display inline-block
	margin-bottom 0
	font-weight normal
	text-align center
	vertical-align middle
	cursor pointer
	background-image none
	border-color transparent
	border-style solid
	border-width 0
	border-radius 0
	line-height normal
	-webkit-user-drag none
	box-sizing border-box
	text-decoration none
	background-color transparent
	font-family $base-font-family
	padding 0
	transition all $ttf

	&__icon
	&__text
		display inline-block
		vertical-align middle

	&__icon + &__text
	&__text + &__icon
		margin-left 8px

	&:focus
	&:active:focus
		outline none

	&:hover
	&:focus
		color #333333
		text-decoration none

	&:active
	&_active
		outline 0
		background-image none

	&_disabled
	&[disabled]
		&
		&:hover
		&:focus
		&:active
			opacity 0.65
			box-shadow none
			outline none


//-//////////////////////////////////////////////////////////
//- Main button style
//-//////////////////////////////////////////////////////////

//- Block button
.button_block
	display block
	width 100%



//-//////////////////////////////////////////////////////////
//- Styles and colors
//-//////////////////////////////////////////////////////////


.button.button_light
	padding 4px 7px 7px
	font-weight bold
	color black
	background-color white
	border 1px solid black
	&:hover
		color blue
		border 1px solid blue


.button.button_dark
	padding 4px 7px 7px
	font-weight bold
	color white
	background-color black
	border 1px solid black
	&:hover
		color #fff
		background-color blue
		border 1px solid blue


.button.button_lg
	padding 6px 30px 9px
