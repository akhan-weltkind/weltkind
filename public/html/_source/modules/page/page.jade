include ../injected/injected
include ../browsehappy/browsehappy
include ../javascripts/javascripts


mixin page(data)
	body.page&attributes(attributes)
		+browsehappy(browsehappy)

		+injected: block

		.page__content
			.page__wrapper
				+if('header')
					.page__header
						+use('header')

				+if('main')
					.page__main
						+use('main')

				.page__buffer

			+if('footer')
				.page__footer
					+use('footer')


		//- Scripts
		+javascripts()
