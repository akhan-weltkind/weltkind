
.breadcrumbs
	ul-reset()
	margin 10px 0 20px
	cursor default
	&__item
	&__separator
		display inline-block
		vertical-align bottom
		list-style none
		padding 0
		font-size 12px
		color #000
	&__link
		+link()
			color #000
		&_active
			+link()
				color #000
				&:after
					display none
		display inline-block
		vertical-align bottom
	&__separator
		&:after
			display inline-block
			content "/"
			margin 0 5px

